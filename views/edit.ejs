<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a href="/posts?author=<%= user._id %>">
                <img class="avatar" src="/img/<%= user.avatar %>" >
            </a>
        </div>

        <div class="col-md-8">
            <form  method="post" action="/posts/<%= post._id %>/edit">
                <div class="form-group">
                    <label>标题</label>
                    <input class="form-control" type="text" name="title" value="<%= post.title %>">
                </div>
                <div class="form-group">
                    <label>内容</label>
                    <textarea class="form-control" name="content" rows="15"><%= post.content %></textarea>
                </div>
                <input type="submit" class="ui button" value="发布">
            </form>
        </div>
    </div>


</div>

<%- include('footer') %>